@model IEnumerable<eSPP.Models.BonusSambilanDetailModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-table fa-fw "></i>
                Transaksi Sambilan
                <span>
                    >
                    Bonus Sambilan Detail
                </span>
            </h1>
        </div>
    </div>

    @if (ViewBag.StatusMessage == "Data Telah Berjaya Disimpan.")
    {
        <div class="row">
            <article class="col-sm-12">
                <div class="alert alert-success fade in">
                    <button class="close" data-dismiss="alert">
                        ×
                    </button>
                    <i class="fa-fw fa fa-check"></i>
                    <strong>Berjaya</strong> @ViewBag.StatusMessage <strong>@ViewBag.emel</strong>
                </div>
            </article>
        </div>
    }
    else if (ViewBag.StatusMessage == "Data Telah Berjaya Dikemaskini.")
    {
        <div class="row">
            <article class="col-sm-12">
                <div class="alert alert-success fade in">
                    <button class="close" data-dismiss="alert">
                        ×
                    </button>
                    <i class="fa-fw fa fa-check"></i>
                    <strong>Berjaya</strong> @ViewBag.StatusMessage <strong>@ViewBag.emel</strong>
                </div>
            </article>
        </div>
    }
    else if (ViewBag.StatusMessage == "Data Anda Telah Muktamad.")
    {
        <div class="row">
            <article class="col-sm-12">
                <div class="alert alert-success fade in">
                    <button class="close" data-dismiss="alert">
                        ×
                    </button>
                    <i class="fa-fw fa fa-check"></i>
                    <strong>Berjaya</strong> @ViewBag.StatusMessage <strong>@ViewBag.emel</strong>
                </div>
            </article>
        </div>
    }
    <!-- widget grid -->
    <section id="widget-grid" class="">
        <!-- row -->
        <div class="row">

            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-3" data-widget-editbutton="false">
                    <!-- widget options:
                    usage: <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-0" data-widget-editbutton="false">

                    data-widget-colorbutton="false"
                    data-widget-editbutton="false"
                    data-widget-togglebutton="false"
                    data-widget-deletebutton="false"
                    data-widget-fullscreenbutton="false"
                    data-widget-custombutton="false"
                    data-widget-collapsed="true"
                    data-widget-sortable="false"

                    -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Bonus Sambilan Detail</h2>

                    </header>

                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">

                            <div class="row">

                            </div>
                            <br />
                            <div id="showtable">
                                <!-- TODO -->
                                @if (Model.Count() > 0)
                                {
                                    <table id="datatable_tabletools" class="table table-striped table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <th>Nama</th>
                                                <th>No Pekerja</th>
                                                <th>No Kad Pengenalan</th>
                                                <th>No Akaun Bank</th>
                                                <th>No KWSP</th>
                                                <th>Tarikh Lantikan</th>
                                                <th>Jan</th>
                                                <th>Feb</th>
                                                <th>Mac</th>
                                                <th>Apr</th>
                                                <th>Mei</th>
                                                <th>Jun</th>
                                                <th>Jul</th>
                                                <th>Ogo</th>
                                                <th>Sept</th>
                                                <th>Okt</th>
                                                <th>Nov</th>
                                                <th>Dis</th>
                                                <th>Jumlah</th>
                                                <th>Purata</th>
                                                <th>Bonus</th>
                                                <th>Catatan</th>
                                                <th>Muktamad</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (BonusSambilanDetailModel x in Model)
                                            {
                                                <tr>
                                                    <td>@x.Nama</td>
                                                    <td>@x.NoPekerja</td>
                                                    <td>@x.NoKadPengenalan</td>
                                                    <td>@x.NoAkaunBank</td>
                                                    <td>@x.NoKWSP</td>
                                                    <td>@x.TarikhLantikanString</td>
                                                    <td>@x.Jan</td>
                                                    <td>@x.Feb</td>
                                                    <td>@x.Mac</td>
                                                    <td>@x.April</td>
                                                    <td>@x.Mei</td>
                                                    <td>@x.Jun</td>
                                                    <td>@x.Julai</td>
                                                    <td>@x.Ogos</td>
                                                    <td>@x.September</td>
                                                    <td>@x.Oktober</td>
                                                    <td>@x.November</td>
                                                    <td>@x.Disember</td>
                                                    <td>@x.JumlahGaji</td>
                                                    <td>@x.GajiPurata</td>
                                                    <td>
                                                        <!-- bonus diterima -->
                                                        <input type="button" class="btn btn-default" name="btnBonus"
                                                               value="@x.BonusDiterima"
                                                               data-month="@x.BulanBonus.ToString("D2")"
                                                               data-year="@x.TahunBonus.ToString()"
                                                               data-pekerja="@x.NoPekerja" />

                                                    </td>
                                                    <td>
                                                        <!-- catatan-->
                                                        <a name="btnCatatan" class="btn btn-xs btn-default btn-circle"
                                                           href='#'
                                                           data-month="@x.BulanBonus.ToString("D2")"
                                                           data-year="@x.TahunBonus.ToString()"
                                                           data-pekerja="@x.NoPekerja"
                                                           data-catatan="@x.Catatan"
                                                           title="Catatan"><i class="fa fa-money"></i></a>
                                                    </td>
                                                    <td>
                                                        if(@x.IsMuktamad)
                                                        {
                                                            <button class="btn btn-xs btn-default btn-circle" disabled title="Transaksi Sambilan"><i class="fa fa-money"></i></button>
                                                        }
                                                        else
                                                        {
                                                            <a class="btn btn-xs btn-default btn-circle"
                                                               href='#' title="Muktamad">
                                                                <i class="fa fa-money"></i>
                                                            </a>
                                                        }

                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }
                            </div>
                        </div>
                    </div>
                    <!-- end widget content -->

                </div>
                <!-- end widget div -->
                <!-- end widget -->

            </article>
            <!-- WIDGET END -->
        </div>

        <!-- end row -->
        <!-- end row -->

    </section>
    <!-- end widget grid -->

</div>
<div id="dmessage1" style="display:none" title="Bonus Diterima">
    @using (Html.BeginForm("UpdateBonus", "KakitanganSambilan", FormMethod.Post))
    {
        <fieldset>
            <div class="form-group">
                <input id="bonusDialog1" type="text" name="bonusDiterima" class="form-control" />
                <input id="bulanDialog1" type="hidden" name="bulanBonus" />
                <input id="tahunDialog1" type="hidden" name="tahunBonus" />
                <input id="pekerjaDialog1" type="hidden" name="noPekerja" />
            </div>
            <div class="form-group">
                <input type="submit" value="Kemaskini" class="btn btn-primary pull-right" />
            </div>
        </fieldset>
    }
</div>

<div id="dmessage2" style="display:none" title="Catatan">
    @using (Html.BeginForm("UpdateCatatan", "KakitanganSambilan", FormMethod.Post))
    {
        <fieldset>
            <div class="form-group">
                @Html.TextArea("catatan", new { id = "catatanDialog2", @class = "form-control" })
                <input id="bulanDialog2" type="hidden" name="bulanBonus" />
                <input id="tahunDialog2" type="hidden" name="tahunBonus" />
                <input id="pekerjaDialog2" type="hidden" name="noPekerja" />
            </div>
            <div class="form-group">
                <input type="submit" value="Kemaskini" class="btn btn-primary pull-right" />
            </div>
        </fieldset>
    }
</div>


@section pagespecific{
    <script type="text/javascript">
        $(document).ready(function () {
            JanaTable();
            KlikBonus();
            KlikCatatan();
            $("#btn_muktamad").on("click", function () {
                MuktamadAll();
            });
        })

        function KlikBonus() {
            var bonusDialog = $('#dmessage1').dialog({
                autoOpen: false
            });

            $("[name=btnBonus]").button().on("click", function () {
                $('#bonusDialog1').val($(this).val());
                $('#bulanDialog1').val($(this).attr('data-month'));
                $('#tahunDialog1').val($(this).attr('data-year'));
                $('#pekerjaDialog1').val($(this).attr('data-pekerja'));
                bonusDialog.dialog("open");
            });
        }

        function KlikCatatan() {
            var bonusDialog2 = $('#dmessage2').dialog({
                autoOpen: false
            });

            $("[name=btnCatatan]").button().on("click", function () {
                $('#catatanDialog2').val($(this).attr('data-catatan'));
                $('#bulanDialog2').val($(this).attr('data-month'));
                $('#tahunDialog2').val($(this).attr('data-year'));
                $('#pekerjaDialog2').val($(this).attr('data-pekerja'));
                bonusDialog2.dialog("open");
            });
        }

        function MuktamadAll() {
            //debugger;
            alert('Muktamad All');
            //$.ajax({
            //    url: "../../PengurusanKakitanganSambilan/MuktamadAll",
            //    data: { "bulantahundari": $("input[name='bulantahunbekerja']").val(), "bulantahunsehingga": $("input[name='bulantahundibayar']").val() },
            //    contentType: "application/json; charset=utf-8",
            //    type: 'GET',
            //    success: function (data) {
            //        $("#showtable").html(data)
            //    }
            //})
        }

        function JanaTable() {
            var responsiveHelper_dt_basic = undefined;
            var responsiveHelper_datatable_fixed_column = undefined;
            var responsiveHelper_datatable_col_reorder = undefined;
            var responsiveHelper_datatable_tabletools = undefined;

            var breakpointDefinition = {
                tablet: 1024,
                phone: 480
            };
            $('#datatable_tabletools').dataTable({
                "sDom": "<'dt-toolbar'<'col-xs-12 col-sm-6'f><'col-sm-6 col-xs-6 hidden-xs'T<'muktamad'><'tambah'>>r>" +
                    "t" +
                    "<'dt-toolbar-footer'<'col-sm-6 col-xs-12 hidden-xs'i><'col-sm-6 col-xs-12'p>>",
                "oTableTools": {
                    "aButtons": [
                        "copy",
                        "csv",
                        "xls",
                        {
                            "sExtends": "pdf",
                            "sTitle": "SmartAdmin_PDF",
                            "sPdfMessage": "SmartAdmin PDF Export",
                            "sPdfSize": "letter"
                        },
                        {
                            "sExtends": "print",
                            "sMessage": "Generated by SmartAdmin <i>(press Esc to close)</i>"
                        }
                    ],
                    "sSwfPath": "/Scripts/plugin/datatables/swf/copy_csv_xls_pdf.swf"
                },
                "autoWidth": true,
                "preDrawCallback": function () {
                    if (!responsiveHelper_datatable_tabletools) {
                        responsiveHelper_datatable_tabletools = new ResponsiveDatatablesHelper($('#datatable_tabletools'), breakpointDefinition);
                    }
                },
                "rowCallback": function (nRow) {
                    responsiveHelper_datatable_tabletools.createExpandIcon(nRow);
                },
                "drawCallback": function (oSettings) {
                    responsiveHelper_datatable_tabletools.respond();
                }
            });
            //$('div.tambah').after('<a name="btn_add" class="btn btn-success Tambah pull-right hidden-mobile" href="#"><span style="color:#FFF"><span class="fa fa-plus"></span> Tambah</span></a>');
            $('div.muktamad').after('<a name="btn_muktamad" id="btn_muktamad" class="btn btn-warning pull-right hidden-mobile" onclick="MuktamadAll()" ><span style="color:#FFF"><span class="fa fa-plus"></span> Muktamad</span></a>');
        }
    </script>
}
